<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/cardview_dark_background"
    style="@android:style/Theme.Holo">


    <TextView
        android:id="@+id/clcIngresa"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="STANDAR"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textSize="40dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="60dp"
        android:layout_marginRight="10dp"
        android:textAlignment="textEnd"
        ></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btn01_function"
                android:text="%"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                >

            </Button>

            <Button
                android:id="@+id/btn02_function"
                android:text="CE"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn03_function"
                android:text="C"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <ImageButton
                android:id="@+id/btn04_function"
                android:layout_width="86dp"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_backspace_24"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:background="@color/purple_200"
                tools:ignore="SpeakableTextPresentCheck">

            </ImageButton>

            <Button
                android:id="@+id/btn05_function"
                android:text="1/x"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn06_function"
                android:text="x²"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn07_function"
                android:text="√x"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn08_function"
                android:text="÷"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="445dp"
            android:layout_marginLeft="15dp"
            android:columnCount="4"
            android:rowCount="4"
            android:useDefaultMargins="true"
            android:verticalSpacing="50dp"
            android:horizontalSpacing="10dp" >

            <Button
                android:id="@+id/btn09_function"
                android:layout_height="90dp"
                android:text="7"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn10_function"
                android:layout_height="90dp"
                android:text="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn11_function"
                android:layout_height="90dp"
                android:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn12_function"
                android:layout_height="90dp"
                android:text="X"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn13_function"
                android:layout_height="90dp"
                android:text="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn14_function"
                android:layout_height="90dp"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn15_function"
                android:layout_height="90dp"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn16_function"
                android:layout_height="90dp"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn17_function"
                android:layout_height="90dp"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn18_function"
                android:layout_height="90dp"
                android:text="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn19_function"
                android:layout_height="90dp"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn20_function"
                android:layout_height="90dp"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn21_function"
                android:layout_height="90dp"
                android:text="+/-"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn22_function"
                android:layout_height="90dp"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn23_function"
                android:layout_height="90dp"
                android:text=","
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:rippleColor="#009688">

            </Button>

            <Button
                android:id="@+id/btn24_function"
                android:layout_width="88dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_launcher_foreground"
                android:text="="
                android:textAppearance="@style/TextAppearance.AppCompat.Medium">

            </Button>


        </GridLayout>

    </LinearLayout>


</LinearLayout>